<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:clickable="true"
            android:orientation="vertical"
            android:background="@drawable/poster">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/newlogo"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right">

                    <!--            <ImageView-->
                    <!--                android:id="@+id/search"-->
                    <!--                android:layout_width="40dp"-->
                    <!--                android:layout_height="40dp"-->
                    <!--                android:layout_gravity="center_vertical"-->
                    <!--                android:clickable="true"-->
                    <!--                app:srcCompat="@drawable/search"-->
                    <!--                tools:ignore="VectorDrawableCompat,SpeakableTextPresentCheck" />-->

                    <ImageView
                        android:id="@+id/userid"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        app:srcCompat="@drawable/user"
                        tools:ignore="VectorDrawableCompat,SpeakableTextPresentCheck" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/button"
                android:layout_width="125dp"
                android:layout_height="52dp"
                android:layout_marginTop="210dp"
                android:backgroundTint="#ffff"
                android:text="PLAY"
                android:textStyle="bold"
                android:textColor="#000"
                android:drawableLeft="@drawable/play"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sedang Tren Sekarang"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/film1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film1"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/film2"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film2"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/film3"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film3"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/film4"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film4"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Film Internasional"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/film5"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film5"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/film6"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film6"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/film7"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film7"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/film8"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:src="@drawable/film8"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilihan untuk Anda"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/film9"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film3"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/film10"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film7"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/film11"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film5"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/film12"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film1"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Serial Terbaru"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/film13"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film3"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/film14"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film6"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/film15"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film4"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/film16"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:src="@drawable/film6"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navv"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/dark_grey"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu"/>
</RelativeLayout>





















